<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landing_gradient_bg"
    android:id="@+id/landingContainer">

    <!-- Background particles/dots animation container -->
    <FrameLayout
        android:id="@+id/particlesContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.3" />

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="40dp">

        <!-- Logo/Icon area -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_location_pulse"
            android:layout_marginBottom="40dp"
            android:alpha="0"
            android:scaleX="0.8"
            android:scaleY="0.8" />

        <!-- Main title -->
        <TextView
            android:id="@+id/mainTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="INDOOR\nNAVIGATION"
            android:textSize="38sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:lineSpacingExtra="8dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:alpha="0"
            android:translationY="50dp" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precision positioning\nfor modern spaces"
            android:textSize="18sp"
            android:textColor="#B0B0B0"
            android:gravity="center"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="60dp"
            android:alpha="0"
            android:translationY="50dp" />

        <!-- Feature highlights -->
        <LinearLayout
            android:id="@+id/featuresContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="80dp"
            android:alpha="0"
            android:translationY="50dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/feature_dot"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Real-time position tracking"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/feature_dot"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Multi-floor navigation"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_gravity="center">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:background="@drawable/feature_dot"
                    android:layout_marginEnd="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="WiFi-based positioning"
                    android:textColor="#E0E0E0"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Swipe up indicator -->
    <LinearLayout
        android:id="@+id/swipeIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Swipe up to continue"
            android:textColor="#80FFFFFF"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <ImageView
            android:id="@+id/swipeArrow"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_up"
            android:tint="#80FFFFFF" />

    </LinearLayout>

    <!-- Loading overlay for transition -->
    <FrameLayout
        android:id="@+id/loadingOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1A1A1A"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:gravity="center">

            <ProgressBar
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="#007AFF"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading maps..."
                android:textColor="#FFFFFF"
                android:textSize="16sp" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>